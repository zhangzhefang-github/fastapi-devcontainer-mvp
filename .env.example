# 🔐 Security Configuration
# IMPORTANT: Change these values in production!
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# 🗄️ Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/fastapi_app
REDIS_URL=redis://redis:6379/0

# 🌐 Application Configuration
APP_NAME=FastAPI Enterprise MVP
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# CORS Origins (comma-separated list or JSON array)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501", "http://localhost:8080"]

# 📊 Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TRACING=true
SENTRY_DSN=

# 🔒 Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# 🐳 Container Configuration
BACKEND_PORT=8000
FRONTEND_PORT=8501
NGINX_PORT=80

# 🗄️ Database Credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fastapi_app
POSTGRES_PORT=5432
POSTGRES_SERVER=db

# 📧 Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME=FastAPI Enterprise MVP

# 🔐 Superuser Configuration
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# 🔧 Additional Settings
TESTING=false
SECRET_KEY=your-secret-key-for-general-use

# 📈 Monitoring Passwords
GRAFANA_PASSWORD=admin
PROMETHEUS_PASSWORD=

# 🌍 Production Settings (uncomment for production)
# DEBUG=false
# LOG_LEVEL=WARNING
# ENVIRONMENT=production
# CORS_ORIGINS=["https://yourdomain.com"]
